<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/word_guess_item_card_margin"
    app:cardBackgroundColor="?attr/colorPositive"
    app:cardCornerRadius="@dimen/corner_radius"
    tools:theme="@style/Theme.VSensei">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="@dimen/word_guess_item_container_min_width"
        android:orientation="vertical"
        android:padding="@dimen/word_guess_item_text_container_padding">

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/word_guess_item_text_size_large"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="楽しい" />

        <TextView
            android:id="@+id/hint_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/word_guess_item_text_size_medium"
            tools:text="(たのしい)" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/word_guess_item_answer_margin_top"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/word_guess_item_text_size_medium"
            tools:text="enjoyable, fun"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>