<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    tools:context=".view.ui.PracticeHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/practice_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/practice_types_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_do_you_want_to_practice"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/ic_guess_the_word"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <ImageView
                android:id="@+id/ic_guess_the_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:elevation="9dp"
                android:src="@drawable/ic_guess_the_word"
                app:layout_constraintBottom_toTopOf="@id/guess_the_word_button"
                app:layout_constraintEnd_toEndOf="@id/guess_the_word_button"
                app:layout_constraintTop_toTopOf="@id/guess_the_word_button"
                tools:ignore="ContentDescription" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/guess_the_word_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="70dp"
                android:text="@string/guess_the_word"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:layout_constraintBottom_toTopOf="@id/guess_the_meaning_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/practice_types_label"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:elevation="9dp"
                android:src="@drawable/ic_guess_the_meaning"
                app:layout_constraintBottom_toTopOf="@id/guess_the_meaning_button"
                app:layout_constraintStart_toStartOf="@id/guess_the_meaning_button"
                app:layout_constraintTop_toTopOf="@id/guess_the_meaning_button"
                tools:ignore="ContentDescription" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/guess_the_meaning_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:text="@string/guess_the_meaning"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guess_the_word_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/empty_groups_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_not_found"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/missing_words"
                android:textAlignment="center"
                android:textColor="?android:textColorPrimary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/add_words_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/add_words" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>