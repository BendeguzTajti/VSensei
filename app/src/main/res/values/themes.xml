<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VSensei" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_500</item>
        <item name="colorPrimaryVariant">@color/dark_blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorControlNormal">@color/dark_blue_500</item>
        <item name="android:textColorPrimary">@color/dark_blue_500</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.Secondary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="helperTextTextColor">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxBackgroundColor">@color/dark_blue_200</item>
        <item name="boxStrokeErrorColor">@color/red_200</item>
        <item name="errorTextColor">@color/red_200</item>
        <item name="errorIconTint">@color/red_200</item>
    </style>

    <style name="ThemeOverlay.App.ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/dark_blue_500</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.Secondary.DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="helperTextTextColor">@android:color/white</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxBackgroundColor">@color/dark_blue_200</item>
        <item name="boxStrokeErrorColor">@color/red_200</item>
        <item name="errorTextColor">@color/red_200</item>
        <item name="errorIconTint">@color/red_200</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/yellow_500</item>
    </style>
</resources>