<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.VSensei" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_500</item>
        <item name="colorPrimaryVariant">@color/dark_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_50</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/rubik</item>
        <item name="actionBarSize">56dp</item>
        <item name="backgroundColor">@color/white_50</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_blue_700</item>
        <item name="colorControlNormal">@color/dark_blue_700</item>
        <item name="colorPositive">@color/green_500</item>
        <item name="colorNegative">@color/red_500</item>
        <item name="android:textColorPrimary">@color/dark_blue_700</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>
</resources>